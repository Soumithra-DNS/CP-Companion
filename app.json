{
  "expo": {
    "name": "CP_Companion",
    "slug": "CP_Companion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cpcompanion",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "runtimeVersion": {
      "policy": "sdkVersion"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.cpcompanion",
      "associatedDomains": [
        "applinks:cpcompanion.com"
      ],
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to authenticate",
        "NSCameraUsageDescription": "Allow camera access to scan documents",
        "LSApplicationQueriesSchemes": [
          "cpcompanion",
          "https"
        ]
      }
    },

    "android": {
      "package": "com.yourcompany.cpcompanion",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [
            {
              "scheme": "https",
              "host": "cpcompanion.com",
              "pathPrefix": "/"
            },
            {
              "scheme": "cpcompanion"
            }
          ],
          "autoVerify": true
        }
      ],
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "pan"
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-secure-store",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "darkMode": {
            "image": "./assets/images/splash-icon-dark.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true,
            "flipper": false
          },
          "android": {
            "newArchEnabled": true,
            "kotlinVersion": "1.9.24"
          }
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },

    "extra": {
      "clerkPublishableKey": "${EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY}",
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    }
  }
}
